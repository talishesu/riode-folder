@model riode.Models.Entities.Colors

@{
    ViewData["Title"] = "Detail";
}

<div style="padding:0;margin-left:240px">
    <div class="card">
        <div class="card-block table-border-style">
            <div class="table-responsive">
                <table class="table table-inverse">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Color</th>
                            <th>Name</th>
                            <th>Color Code</th>
                            <th>Created Date</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <th scope="row">@Model.Id</th>
                            <td><div style="background-color:@Model.ColorCode;width:20px;height:20px;"></div></td>
                            <td>@Model.Name</td>
                            <td>@Model.ColorCode</td>
                            <td>@Model.CreatedDate</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

