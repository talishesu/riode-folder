@model riode.Models.Entities.Colors

@{
    ViewData["Title"] = "Delete";
}

<div style="padding:0;margin-left:240px">
    <form method="post">
        <div class="form-group row">
            <label asp-for="Name" class="col-sm-2 col-form-label">
            </label>
            <div class="col-sm-10">
                <input asp-for="Name" disabled type="text" class="form-control">
                <span asp-validation-for="Name"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="ColorCode" class="col-sm-2 col-form-label">
            </label>
            <div class="col-sm-10">
                <input asp-for="ColorCode" disabled type="text" class="form-control">
                <span asp-validation-for="ColorCode"></span>
                <div style="background-color:@Model.ColorCode;width:20px;height:20px; margin-top:20px;"></div>
            </div>
        </div>
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-out btn-success btn-square">
            Delete
        </button>
    </form>
</div>

