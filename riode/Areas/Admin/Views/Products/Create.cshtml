@model Products
@{
    ViewData["Title"] = "Create";
}


<div style="padding:0;margin-left:250px">
    <form method="post" enctype="multipart/form-data">
        <div class="col-6 row">
            <div>
                <div style="width: 600px;" class="imager-container" id="viewer1" name="files">
                </div>
            </div>
        </div>
        <div class="col-6">
            <div class="form-group row">
                <label asp-for="Name" class="col-sm-2 col-form-label">
                </label>
                <div class="col-sm-10">
                    <input asp-for="Name" type="text" class="form-control">
                    <span asp-validation-for="Name"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Description" class="col-sm-2 col-form-label">
                </label>
                <div class="col-sm-10">
                    <input asp-for="Description" type="text" class="form-control">
                    <span asp-validation-for="Description"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="BrandId" class="col-sm-2 col-form-label">
                </label>
                <div class="col-sm-10">
                    <select class="form-control select2" asp-for="BrandId" asp-items="ViewBag.BrandId">
                        <option selected disabled value="">--Secim Edin--</option>
                    </select>
                    <span asp-validation-for="BrandId"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="ShortDescription" class="col-sm-2 col-form-label">
                </label>
                <div class="col-sm-10">
                    <input asp-for="ShortDescription" type="text" class="form-control">
                    <span asp-validation-for="ShortDescription"></span>
                </div>
            </div>


            <div class="form-group row">
                <label asp-for="StockKeepingUnit" class="col-sm-2 col-form-label">
                </label>
                <div class="col-sm-10">
                    <input asp-for="StockKeepingUnit" type="text" class="form-control">
                    <span asp-validation-for="StockKeepingUnit"></span>
                </div>
            </div>
        </div>
        <button type="submit" class="btn btn-out btn-success btn-square">
            Create
        </button>
    </form>
</div>
@section addcss{
    <link href="~/lib/select2/css/select2.min.css" rel="stylesheet" />
    <link href="~/lib/multiple-imager-js/css/imager.css" rel="stylesheet" />
}
@section addjs{
    <script src="~/lib/select2/js/select2.js"></script>
    <script src="~/lib/multiple-imager-js/js/imager.js"></script>
    <script>
        $('#viewer1').imgadd({
            tnWidth: '120px',
            tnHeight: '120px',
            fontSize: '55px',
            plusInnerHtml: '',
            plusBtnClass: undefined
        });
    </script>
}
