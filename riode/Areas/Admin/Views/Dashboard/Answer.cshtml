@model riode.Models.Entities.Contact
@{
    ViewData["Title"] = "Answer";
}
<div style="padding:0;margin-left:240px">
    <form method="post">
        <div class="form-group row">
            <label asp-for="Answer" class="col-sm-2 col-form-label">
            </label>
            <div class="col-sm-10">
                <input asp-for="Answer" type="text" class="form-control">
                <span asp-validation-for="Answer"></span>
            </div>
        </div>
        <input type="hidden" asp-for="Id" />
        @if (Model.Answer == null)
        {
            <button type="submit" class="btn btn-out btn-success btn-square">
                Answer
            </button>
        }
        else
        {

            <button type="submit" class="btn btn-out btn-success btn-square">
                Edit
            </button>
        }
    </form>
</div>
