@model riode.Models.ViewModels.CategoryViewModel
@{
    ViewData["Title"] = "Create";
}

<div style="padding:0;margin-left:240px">
    <form method="post">
        <div class="form-group row">
            <label asp-for="Category.Name" class="col-sm-2 col-form-label">
            </label>
            <div class="col-sm-10">
                <input asp-for="Category.Name" type="text" class="form-control">
                <span asp-validation-for="Category.Name"></span>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label">
            </label>
            <div class="col-sm-10">
                <select asp-for="Category.BigCategoryId">
                    <option value="">--Secin--</option>
                    @foreach (var item in Model.Categories)
                    {
                        @if (item.DeletedDate == null)
                        {
                            <option value="@item.Id">@item.Name</option>
                        }
                    }
                    </select>
            </div>
        </div>
        <button type="submit" class="btn btn-out btn-success btn-square">
            Create
        </button>
    </form>
</div>

