@model riode.Models.Entities.Specification

@{
    ViewData["Title"] = "Edit";
}

<div class="page-header">
    <div class="row align-items-end">
        <div class="col-lg-8">
            <div class="page-header-title">
                <div class="d-inline">
                    <h4>Specifications</h4>
                </div>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="page-header-breadcrumb">
                <ul class="breadcrumb-title">
                    <li class="breadcrumb-item" style="float: left;">
                        <a asp-controller="Dashboard" asp-action="Index"> <i class="feather icon-home"></i> </a>
                    </li>
                    <li class="breadcrumb-item" style="float: left;"><a asp-action="Index">Specifications</a> </li>
                    <li class="breadcrumb-item" style="float: left;">Cari brend`ə baxış</li>
                </ul>
            </div>
        </div>
    </div>
</div>

<div class="page-body">
    <div class="row">
        <div class="col-sm-12">

            <div class="card">
                <div class="card-block">
                    <h4 class="sub-title">Cari brend`ə baxış</h4>
                    <div>
                        <div class="form-group row">
                            <label class="col-sm-2 col-form-label required" asp-for="Name"></label>
                            <div class="col-sm-10">
                                <p class="form-control">@Model.Name</p>
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-12">
                                <a class="btn btn-info btn-square" asp-action="Index">
                                    Siyahıya qayıt
                                </a>
                                <a class="btn btn-warning btn-square" asp-action="Edit" asp-route-id="@Model.Id">
                                    Redaktə et
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>